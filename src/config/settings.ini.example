; GUI Slider MultiMonitor - Configuration File
; Copy this file to 'settings.ini' and adjust the values

[General]
LastPosition=Center
LastMonitor=1
LastWindowState=Normal

[Animation]
AnimationSpeed=20
SlideSteps=10

[GUI]
DefaultWidth=400
DefaultHeight=300
MinWidth=200
MinHeight=150
MaxWidth=800
MaxHeight=600

[Behavior]
StartOnPrimaryMonitor=1
CenterOnStart=1
AnimateOnStart=0
SavePositionOnExit=1
AutoSlideMode=1
AutoSlideDelay=250

; Slider Modi (nur EINEN aktivieren):
ClassicSliderMode=0       ; 0=Aus, 1=An (2-Klick System)
DirectSlideMode=0         ; 0=Aus, 1=An (Ignoriert Nachbarn)
ContinuousSlideMode=1     ; 0=Aus, 1=An (Kontinuierliche Fahrt - EMPFOHLEN)

[Hotkeys]
SlideLeft=!{Left}
SlideRight=!{Right}
SlideUp=!{Up}
SlideDown=!{Down}
ToggleSlide=!{Space}
CenterWindow=!{Home}
RecoverWindow=!{End}